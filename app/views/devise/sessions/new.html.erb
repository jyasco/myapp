<div class="bg-base-100 min-h-screen flex flex-col justify-center items-center">
  <div class="w-full max-w-md bg-base-100 shadow-md p-6 rounded-lg">
    <h2 class="text-accent text-2xl font-bold text-center mb-6">PurinMania</h2>
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %> 
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :email, "メールアドレス", class: "block text-neutral font-semibold mb-2" %>
        <%= f.email_field :email, autofocus: true, class: "input input-bordered w-full", autocomplete: "email" %>
      </div>
      
      <div class="mb-6">
        <%= f.label :password, "パスワード", class: "block text-neutral font-semibold mb-2" %>
        <%= f.password_field :password, class: "input input-bordered w-full", autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center mb-4">
          <%= f.check_box :remember_me, class: "checkbox" %>
          <%= f.label :remember_me, "ログイン状態を保持する", class: "ml-2 text-neutral" %>
        </div>
      <% end %>

      <div class="text-center">
        <%= f.submit "ログイン", class: "btn btn-primary w-full" %>
      </div>
    <% end %>

    <div class="text-center mt-4">
      <%= link_to "ユーザー登録の方はこちら", new_registration_path(resource_name), class: "text-accent hover:underline" %><br>
      <%= link_to "パスワードを忘れた方はこちら", new_password_path(resource_name), class: "text-accent hover:underline" %>
    </div>
  </div>
</div>
