<div class="bg-base-100 min-h-screen flex flex-col justify-center items-center">
  <div class="w-full max-w-md bg-base-100 shadow-md p-6 rounded-lg">
    <h2 class="text-accent text-2xl font-bold text-center mb-6">PurinMania</h2>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %> 
      <%= render "devise/shared/error_messages", resource: resource %>
      
      <div class="mb-4">
        <%= f.label :name, "ユーザー名", class: "block text-neutral font-semibold mb-2" %>
        <%= f.text_field :name, autofocus: true, class: "input input-bordered w-full" %>
      </div>
      
      <div class="mb-4">
        <%= f.label :email, "メールアドレス", class: "block text-neutral font-semibold mb-2" %>
        <%= f.email_field :email, class: "input input-bordered w-full", autocomplete: "email" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, "パスワード", class: "block text-neutral font-semibold mb-2" %>
        <%= f.password_field :password, class: "input input-bordered w-full", autocomplete: "new-password" %>
      </div>

      <div class="mb-6">
        <%= f.label :password_confirmation, "パスワード確認", class: "block text-neutral font-semibold mb-2" %>
        <%= f.password_field :password_confirmation, class: "input input-bordered w-full", autocomplete: "new-password" %>
      </div>

      <div class="text-center">
        <%= f.submit "登録", class: "btn btn-primary w-full" %>
      </div>
    <% end %>

    <div class="text-center mt-4">
      <%= link_to "すでにアカウントをお持ちの方はこちら", new_session_path(resource_name), class: "text-accent hover:underline" %>
    </div>
  </div>
</div>

