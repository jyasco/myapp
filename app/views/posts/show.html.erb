<div class="container mx-auto px-4 py-8 max-w-xl sm:max-w-2xl">
  <div class="bg-white shadow-lg rounded-lg overflow-hidden px-6 sm:px-20 py-6 sm:py-10">
    <!-- ユーザー情報とアクションボタン -->
    <div class="p-4 flex justify-between items-center mb-4">
      <div class="flex items-center">
        <div class="w-10 h-10 bg-gray-300 rounded-full mr-3"></div>
        <div>
          <p class="font-semibold"><%= @post.user.name %></p>
          <p class="text-xs text-subtleText"><%= @post.created_at.strftime("%Y/%m/%d %H:%M") %></p>
        </div>
      </div>
    </div>

    <!-- 店舗名 -->
    <h1 class="text-2xl font-bold mb-4 text-center"><%= @post.shop&.name || "お店" %></h1>

    <!-- 投稿画像（仮） -->
    <div class="w-11/12 mx-auto aspect-square bg-gray-300 flex items-center justify-center rounded-lg mb-6">
      <i class="fas fa-image text-4xl text-gray-500"></i>
    </div>

    <!-- 評価 -->
    <div class="flex justify-center my-6 mb-6">
      <% Post.overall_ratings.size.times do |i| %>
        <span 
          class="inline-block w-8 h-8 mask mask-star-2 mx-1 <%= i < Post.overall_ratings[@post.overall_rating] ? 'bg-accent' : 'bg-placeholder' %>"
          aria-hidden="true"
        ></span>
      <% end %>
    </div>

    <!-- 固さと甘さ -->
    <div class="px-4 py-2 text-lg text-gray-700 text-center font-bold mb-6">
      <span>固さ: <%= t("enums.post.firmness.#{@post.firmness}") %></span>
      <span class="mx-2">|</span>
      <span>甘さ: <%= t("enums.post.sweetness.#{@post.sweetness}") %></span>
    </div>

    <!-- コメント -->
    <div class="px-4 sm:px-8 md:px-12 lg:px-16 py-4">
      <p class="text-gray-700"><%= @post.body %></p>
    </div>

    <hr class="my-4 border-placeholder">

    <!-- 住所 -->
    <div class="px-4 pb-4 text-sm text-subtleText">
      <i class="fas fa-map-marker-alt mr-2 text-accent"></i><%= @post.shop&.address || "住所不明" %>
    </div>
  </div>
</div>