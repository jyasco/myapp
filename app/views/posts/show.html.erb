<div class="container mx-auto px-4 py-8 max-w-2xl">
  <div class="bg-white shadow-lg rounded-lg overflow-hidden">
    <!-- ユーザー情報とアクションボタン -->
    <div class="p-4 flex justify-between items-center border-b">
      <div class="flex items-center">
        <div class="w-10 h-10 bg-gray-300 rounded-full mr-3"></div>
        <span class="font-semibold"><%= @post.user.name %></span>
      </div>
    </div>

    <!-- 投稿画像（仮） -->
    <div class="w-full h-80 bg-gray-300 flex items-center justify-center">
      <i class="fas fa-image text-4xl text-gray-500"></i>
    </div>

    <!-- 店舗名 -->
    <h1 class="text-2xl font-bold p-4"><%= @post.shop&.name || "お店" %></h1>

    <!-- 評価 -->
    <div class="flex mb-3 ml-4">
      <% Post.overall_ratings.size.times do |i| %>
        <span 
          class="inline-block w-5 h-5 mask mask-star-2 <%= i < Post.overall_ratings[@post.overall_rating] ? 'bg-accent' : 'bg-placeholder' %>"
          aria-hidden="true"
        ></span>
      <% end %>
    </div>

    <!-- 固さと甘さ -->
    <div class="px-4 py-2 text-sm text-gray-700">
      <span class="mr-4">固さ: <%= t("enums.post.firmness.#{@post.firmness}") %></span>
      <span>甘さ: <%= t("enums.post.sweetness.#{@post.sweetness}") %></span>
    </div>

    <!-- コメント -->
    <div class="p-4">
      <p class="text-gray-700"><%= @post.body %></p>
    </div>

    <!-- 住所 -->
    <div class="px-4 pb-4 text-sm text-gray-600">
      <i class="fas fa-map-marker-alt mr-2"></i><%= @post.shop&.address || "住所不明" %>
    </div>
  </div>
</div>