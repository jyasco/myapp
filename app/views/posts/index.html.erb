<div class="container mx-auto p-4">
  <div class="tabs">
    <a class="tab tab-lifted">一覧</a>
    <a class="tab">マップ</a>
  </div>

  <div class="bg-base-100 p-4 shadow-md rounded-md">
    <div class="flex justify-between mb-4">
      <input type="text" placeholder="店名・キーワード" class="input input-bordered w-1/3 placeholder:italic">
      <select class="select select-bordered w-1/4">
        <option disabled selected>固さ</option>
        <option value="smooth">なめらか</option>
        <option value="normal">むっちり</option>
        <option value="firm">かため</option>
      </select>
      <select class="select select-bordered w-1/4">
        <option disabled selected>甘さ</option>
        <option value="sweet">甘め</option>
        <option value="normal">普通</option>
        <option value="mild">控えめ</option>
      </select>
      <button class="btn btn-primary">検索</button>
      <button class="btn btn-outline">クリア</button>
    </div>

    <%= render partial: 'post', collection: @posts %>
  </div>
</div>