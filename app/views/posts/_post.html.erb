<div class="card bg-white shadow-sm mb-6 max-w-xl mx-auto">
  <div class="card-body p-5">
    <div class="flex flex-wrap -mx-3">
      <div class="w-full md:w-1/3 px-3 mb-4 sm:mb-0">
        <div class="bg-gray-300 h-36 w-full rounded-md"></div>
      </div>
      <div class="w-full md:w-2/3 px-3">
        <h2 class="text-xl font-bold mb-3"><%= post.shop&.name || "お店" %></h2>
        <div class="rating rating-sm mb-3">
          <% Post.overall_ratings[post.overall_rating].times do %>
            <input type="radio" name="rating-<%= post.id %>" class="mask mask-star-2 bg-accent" checked disabled />
          <% end %>
        </div>
        <p class="mb-2 text-sm">
          固さ: <%= I18n.t("enums.post.firmness.#{post.firmness}") %> | 
          甘さ: <%= I18n.t("enums.post.sweetness.#{post.sweetness}") %>
        </p>
        <p class="text-sm"><i class="fa fa-map-marker-alt mr-2"></i><%= post.shop&.address || "" %></p>
      </div>
    </div>
  </div>
</div>