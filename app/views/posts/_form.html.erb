<div class="bg-base-100 p-6 rounded-md">
  <%= form_with(model: post, local: true) do |f| %>
    <div class="mb-4">
      <%= f.label :shop_name, "お店", class: "block text-neutral font-semibold mb-2" %>
      <%= f.text_field :shop_name, class: "input input-bordered w-full bg-white" %>
    </div>

    <div class="mb-4">
      <%= f.label :shop_address, "住所", class: "block text-neutral font-semibold mb-2" %>
      <%= f.text_field :shop_address, class: "input input-bordered w-full bg-white" %>
    </div>

    <div class="mb-4">
      <%= f.label :sweetness, "甘さ", class: "block text-neutral font-semibold mb-2" %>
      <%= f.select :sweetness, Post.sweetnesses.keys.map { |s| [I18n.t("enums.sweetness.#{s}"), s] }, {}, class: "select select-bordered w-full bg-white" %>
    </div>

    <div class="mb-4">
      <%= f.label :firmness, "固さ", class: "block text-neutral font-semibold mb-2" %>
      <%= f.select :firmness, Post.firmnesses.keys.map { |f| [I18n.t("enums.firmness.#{f}"), f] }, {}, class: "select select-bordered w-full bg-white" %>
    </div>

    <div class="mb-4">
      <%= f.label :overall_rating, "総合評価", class: "block text-neutral font-semibold mb-2" %>
      <div class="rating">
        <%= f.radio_button :overall_rating, :very_poor, class: "mask mask-star-2 bg-accent" %>
        <%= f.radio_button :overall_rating, :poor, class: "mask mask-star-2 bg-accent" %>
        <%= f.radio_button :overall_rating, :ordinary, class: "mask mask-star-2 bg-accent" %>
        <%= f.radio_button :overall_rating, :good, class: "mask mask-star-2 bg-accent" %>
        <%= f.radio_button :overall_rating, :excellent, class: "mask mask-star-2 bg-accent" %>
      </div>
    </div>

    <div class="mb-6">
      <%= f.label :body, "コメント", class: "block text-neutral font-semibold mb-2" %>
      <%= f.text_area :body, placeholder: "プリンやお店の詳細を入力してください", class: "textarea textarea-bordered w-full bg-white", rows: 4 %>
    </div>

    <div class="text-center">
      <%= f.submit "投稿", class: "btn btn-primary text-white w-28" %>
    </div>
  <% end %>
</div>