<header class="bg-main p-3 h-16 fixed top-0 w-full z-10">
  <div class="mx-auto px-4 sm:px-6 md:px-8 flex justify-between h-full items-center">
    <%= link_to root_path, class: "flex items-center" do %>
      <%= image_tag "logo.png", alt: "PurinMania", class: "h-8 sm:h-10" %>
    <% end %>
    <nav>
      <div class="dropdown dropdown-end">
        <label tabindex="0" class="btn btn-ghost btn-circle p-0">
          <i class="fa-solid fas fa-user-circle text-xl sm:text-3xl text-accent align-middle hover:text-hover"></i>
        </label>
        <ul tabindex="0" class="dropdown-content menu p-2 shadow bg-white rounded-box w-32 mt-2">
          <li class="text-center"><%= link_to t('header.my_page'), mypage_mypage_path, class: "py-2 text-text hover:bg-gray-100 justify-center" %></li>
          <li class="border-t border-placeholder text-center"><%= link_to t('header.logout'), destroy_user_session_path, data: { turbo_method: :delete }, class: "py-2 text-text hover:bg-gray-100 justify-center" %></li>
        </ul>
      </div>
    </nav>
  </div>
</header>